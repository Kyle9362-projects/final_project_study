<div class="page-header">
  <h1>
    Datatypes
    <a href="/datatypes/new" class="btn btn-lg btn-success">New Datatype</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Datatype</th>
        <th>Actions</th>
      </tr>

      <% @datatypes.each do |datatype| %>
      <tr>
        <td><%= datatype.datatype %></td>
        <td>
          <a href="/datatypes/<%= datatype.id %>" class="btn btn-primary">Show</a>
          <a href="/datatypes/<%= datatype.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_datatype/<%= datatype.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @datatypes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
