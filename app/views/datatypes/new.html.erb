<!-- Validation failure messages -->
<% if @datatype.errors.any? %>
  <% @datatype.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Datatype</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_datatype" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for datatype -->
      <div class="form-group">
        <label for="datatype" class="control-label">
          Datatype
        </label>

        <input type="text" id="datatype" name="datatype" placeholder="Datatype" class="form-control" value="<%= @datatype.datatype %>">
      </div>

      <button class="btn btn-success">
        Create Datatype
      </button>
      or
      <a href="/datatypes">Cancel</a>
    </form>
  </div>
</div>
