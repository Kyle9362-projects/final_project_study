<!-- Validation failure messages -->
<% if @study.errors.any? %>
  <% @study.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Study #<%= @study.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_study/<%= @study.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      
      

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @study.title %>">
      </div>

      <!-- Label and input for datatype_id -->
      <div class="form-group">
        <label for="datatype_id" class="control-label">
          Datatype
        </label>

        <%= select_tag(:datatype_id, options_from_collection_for_select(Datatype.all, :id, :datatype, @study.datatype_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Study
      </button>
      or
      <a href="/studies/<%= @study.id %>">Cancel</a>
    </form>
  </div>
</div>
